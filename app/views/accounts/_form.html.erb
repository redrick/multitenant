<%= form_for(account) do |f| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :ico %>
    <%= f.text_field :ico %>
  </div>

  <% if Tenant.current_ids.count > 1 %>
    <div class="field">
      <%= f.label :tenant_id %>
      <%= f.select :tenant_id, current_user.tenants.collect { |t| [t.title, t.id] }, include_blank: true %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
